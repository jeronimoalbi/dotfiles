[ui]
ignore = ~/.hgignore
editor = vim
merge = meld

[alias]
cm = commit --message

[defaults]
log = -l10

[diff]
git = True
showfunc = True
unified = 5

[extensions]
hgext.children =
hgext.churn =
hgext.color =
hgext.convert =
hgext.extdiff =
hgext.fetch =
hgext.graphlog =
hgext.highlight =
hgext.interhg =
hgext.mq =
hgext.progress =
hgext.purge =
hgext.rebase =
hgext.record =
hgext.relink =
hgext.transplant =
hgext.shelve =

[extdiff]
cmd.meld = meld

[merge-tools]
meld.args = --label='local' $local --label='other' $other --label='base' $base

[merge-patterns]
**.min.js = internal:other
**.min.css = internal:other
