{
  // Require .prettierrc
  "prettier.requireConfig": true,

  // Tslint on save
  "tslint.enable": true,
  "tslint.autoFixOnSave": true,

  // Run prettier (and others)
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Language server settings
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/"],
      "filetypes": ["go"]
    }
  }
}
